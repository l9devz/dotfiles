font_size 14.5
modify_font cell_height 1.4
modify_font cell_width 102%
text_composition_strategy legacy

background_opacity 0.97
dim_opacity 0.85

enabled_layouts splits:split_axis=horizontal

map cmd+shift+d launch --cwd=current --location=hsplit
map cmd+d launch --cwd=current --location=vsplit


macos_option_as_alt yes
macos_thicken_font 0
macos_show_window_title_in none
macos_traditional_fullscreen yes

map cmd+1 goto_tab 1
map cmd+2 goto_tab 2
map cmd+3 goto_tab 3
map cmd+4 goto_tab 4
map cmd+5 goto_tab 5
map cmd+6 goto_tab 6

map cmd+t launch --cwd=current --type=tab
map cmd+shift+t launch --type=tab --cwd=root

include ./theme.conf


shell_integration no-title


# BEGIN_KITTY_FONTS
font_family      family="CaskaydiaMono Nerd Font Mono"
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS
